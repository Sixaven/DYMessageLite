<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- 1. 他人头像 (居左) -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_other_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/myhead"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <!-- 2. 消息内容 (在头像右侧) -->
    <!-- 使用背景 drawable (比如一个带圆角的灰色矩形) 来创建气泡效果 -->
    <TextView
        android:id="@+id/tv_other_message_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_chat_other"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_other_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_other_avatar"
        app:layout_constraintWidth_default="wrap"
        tools:text="这是对方发送的一条消息，可能会很长很长很长很长很长。" />

</androidx.constraintlayout.widget.ConstraintLayout>
