<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- 1. 自己的头像 (居右) -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_my_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/myhead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. 消息内容 (在头像左侧) -->
    <TextView
        android:id="@+id/tv_my_message_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_chat_mine"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_my_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_my_avatar"
        app:layout_constraintWidth_default="wrap"
        tools:text="这是我自这" />

</androidx.constraintlayout.widget.ConstraintLayout>
